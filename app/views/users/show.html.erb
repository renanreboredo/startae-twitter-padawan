<div class="col-md-6 col-md-offset-3">
    <div class="page-header">
        <div>
            <h1>User - Details</h1>
        </div>
    </div>
    <div class="panel panel-body">
        <p id="notice"><%= notice %></p>
        <p>
            <strong>Name:</strong>
            <%= @user.name %>
        </p>
        <p>
            <strong>Role:</strong>
            <%= @user.role %>
        </p>
        <p>
            <strong>Twitter account:</strong>
            <%= @user.twitter_account %>
        </p>

        <% unless @tweets.nil? %>
            <p><strong>5 Last Tweets:</strong></p>
            <div class="list-group">
                <% @tweets.each do |tweet| %>
                    <div class="list-group-item">
                        <strong><%= "@#{@user.twitter_account}" %>  </strong>
                        <%= tweet.text %>
                    </div>
                    <br>
                <% end %>
            </div>
        <% end %>

        <%= link_to 'Edit User', edit_user_path(@user), class: "btn btn-primary" %>
        <%= link_to 'Back', users_path, class: "btn btn-default" %>
    </div>
</div>


